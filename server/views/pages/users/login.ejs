<div class="clearfix2"></div>
<div class="content d-flex justify-content-center align-items-center">
  <h1>SAFE YOURSELF FROM HOMELESSNESS</h1>
  <h2>Sign In</h2>
  <form method="POST" action="/users/login" onsubmit="return checksubmit()">
    <div class="alert-issues alert alert-danger"></div>
    <% if(error) { %>
    <div class="alert alert-danger">
      <%- error %>
    </div>
    <% } %> <% if(success) { %>
    <div class="alert alert-success">
      <%- success %>
    </div>
    <% }%>
    <div class="form-group">
      <label for="email">Email address</label>
      <input
        type="email"
        id="email"
        onChange="checkemail(this)"
        class="form-control text-input"
        name="email"
        aria-describedby="emailHelp"
        placeholder="Enter Email"
      />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        onChange="checkpassword(this)"
        class="form-control text-input"
        name="password"
        placeholder="Enter Password"
      />
    </div>
    <button type="submit" class="btn">Submit</button>
  </form>
  <br />
  <strong>If you have no account, click here for <a href="./registration">Sign Up</a>.</strong>
</div>
