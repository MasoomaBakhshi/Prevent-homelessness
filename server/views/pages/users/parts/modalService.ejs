<!-----modal-->
<div
  class="modal fade"
  id="AddService"
  tabindex="-1"
  role="dialog"
  aria-labelledby="ModalService"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="ModalService"></h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form
          method="POST"
          id="serviceForm"
          action=""
          enctype="multipart/form-data"
          role="form"
          data-toggle="validator"
        >
          <input type="hidden" name="createduser" value="<%- user.id %>" />
          <input type="hidden" name="updateduser" value="<%- user.id %>" />
          <div class="form-group">
            <label for="organization">Service Provider Name</label>
            <input
              type="name"
              class="form-control"
              id="organization"
              name="organization"
              placeholder="Enter Service Provider Name"
              data-bv-notempty="true"
              data-bv-notempty-message="Service Provider name is required and cannot be empty. <i class='fas fa-times-circle'></i>"
              data-bv-stringlength="true"
              data-bv-stringlength-min="6"
              data-bv-stringlength-message="Service Provider name must be more than 6 characters long. <i class='fas fa-times-circle'></i>"
            />
          </div>
          <div class="form-group">
            <label for="phone">Service Provider Phone</label>
            <input
              type="tel"
              class="form-control"
              id="phone"
              name="phone"
              aria-describedby="phone"
              placeholder="Enter Service Provider's Phone"
              data-bv-regexp="true"
              data-bv-regexp-regexp="(^1300\d{6}$)|(^1800|1900|1902\d{6}$)|(^0[2|3|7|8]{1}[0-9]{8}$)|(^13\d{4}$)|(^04\d{2,3}\d{6}$)"
              data-bv-regexp-message="Service Provider's phone can be only Australian. <i class='fas fa-times-circle'></i>"
            />
          </div>
          <div class="form-group">
            <label for="address">Service Provider Address</label>
            <input
              type="text"
              class="form-control"
              id="street"
              name="street"
              aria-describedby="street"
              placeholder="Enter Service Provider's Street Name and No"
              placeholder="Enter Service Provider's Street"
              data-bv-stringlength="true"
              data-bv-stringlength-min="3"
              data-bv-stringlength-message="Service Provider's street must be more than 3 characters long. <i class='fas fa-times-circle'></i>"
              data-bv-regexp="true"
              data-bv-regexp-regexp="^[-.?!,/;:() A-Za-z0-9]*$"
              data-bv-regexp-message="Service Provider's street is wrong. <i class='fas fa-times-circle'></i>"
            /><input
              type="text"
              class="form-control"
              id="subrub"
              name="subrub"
              aria-describedby="subrub"
              placeholder="Enter Service Provider Subrub"
              placeholder="Enter Service Provider's subrub"
              data-bv-stringlength="true"
              data-bv-stringlength-min="3"
              data-bv-stringlength-message="Service Provider's subrub must be more than 3 characters long. <i class='fas fa-times-circle'></i>"
              data-bv-regexp="true"
              data-bv-regexp-regexp="^[A-Za-z\s]+$"
              data-bv-regexp-message="Service Provider's subrub is wrong. <i class='fas fa-times-circle'></i>"
            /><input
              type="text"
              class="form-control"
              id="postcode"
              name="postcode"
              aria-describedby="postcode"
              placeholder="Enter Service Provider Postcode"
              data-bv-regexp="true"
              data-bv-regexp-regexp="^(\d{4})$"
              data-bv-regexp-message="Service Provider's postcode can be only Australian. <i class='fas fa-times-circle'></i>"
            />
            <select name="state" id="state" class="state">
              <option value="QLD">Queensland</option>
              <option value="NSW">New South Wales</option>
              <option value="VIC">Victoria</option>
              <option value="WA">Western Australia</option>
              <option value="SA">South Australia</option>
              <option value="TAS">Tasmania</option>
              <option value="ACT">Australian Capital Territory</option>
              <option value="NT">Northern Territory</option>
            </select>
          </div>
          <div class="form-group">
            <label for="web">Service Provider Website</label>
            <input
              type="url"
              class="form-control"
              id="website"
              name="website"
              aria-describedby="website"
              placeholder="Enter Service Provider's URL"
              data-bv-regexp="true"
              data-bv-regexp-regexp="(http|ftp|https):\/\/[\w-]+(\.[\w-]+)+([\w.,@?^=%&amp;:\/~+#-]*[\w@?^=%&amp;\/~+#-])?"
              data-bv-regexp-message="Service Provider's website should be complete and valid URL. <i class='fas fa-times-circle'></i>"
            />
          </div>
          <div class="form-group">
            <label for="body">Organization Summary</label>
            <textarea
              name="body"
              class="form-control"
              id="body"
              aria-describedby="body"
              placeholder="Enter Service Provider Summary"
              data-bv-stringlength="true"
              data-bv-stringlength-min="10"
              data-bv-stringlength-message="Service Provider's Info must be more than 10 characters long. <i class='fas fa-times-circle'></i>"
            ></textarea>
          </div>
          <div class="form-group">
            <label for="note">Any essentail Note</label>
            <input
              type="text"
              class="form-control"
              id="note"
              name="note"
              aria-describedby="note"
              placeholder="Enter any essentail Note of Service Provider e.g open hours, charges etc."
              data-bv-stringlength="true"
              data-bv-stringlength-min="3"
              data-bv-stringlength-message="Service Provider's Special Note must be more than 3 characters long. <i class='fas fa-times-circle'></i>"
            />
          </div>
          <div class="form-group">
            <label for="services">Service Provider's Services (Hold Ctrl Key for multiple)</label>
            <select id="services" name="services[]" class="services" multiple="multiple"
              ><option value=""></option>
              <% storedServices.forEach(storedservice => { %>
              <option value="<%-storedservice%>"><%-storedservice%></option>
              <% }); %>
            </select>
            <label for="organizationMoreServices"
              >If service is not mentioned above (use comma to separate if more then one
              Services)</label
            >
            <input
              type="text"
              class="form-control"
              name="moreservices[]"
              id="moreservices"
              aria-describedby="moreservices"
              placeholder="If service is not mentioned above"
            />
          </div>
          <div class="form-group">
            <label for="mode"> Service Provider's delivery Mode (Hold Ctrl Key for multiple)</label>

            <select id="mode" name="mode[]" class="mode" multiple="multiple" required>
              <option value="lines">Hot Lines</option>
              <option value="forum">Forum</option>
              <option value="chat">Chat</option>
              <option value="locate">Meet for Counselling</option>
              <option value="info">Online Infomation or Blog or Article</option>
              <option value="comunity">Comunity Service</option>
            </select>
          </div>
          <div class="form-group">
            <label for="image">Service Provider Image</label>
            <input type="file" name="image" />
          </div>

          <button type="submit" class="btn">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
